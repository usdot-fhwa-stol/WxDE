<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
	      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	      xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	      http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	      version="3.0">


    <display-name>WXDE</display-name>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
        <welcome-file>index.htm</welcome-file>
        <welcome-file>index.jsp</welcome-file>
        <welcome-file>default.html</welcome-file>
        <welcome-file>default.htm</welcome-file>
        <welcome-file>default.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>CsHttp</servlet-name>
        <servlet-class>wde.cs.CsHttp</servlet-class>
        <init-param>
            <description>millisecond startup delay</description>
            <param-name>delay</param-name>
            <param-value>0</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>CsHttp</servlet-name>
        <url-pattern>/CsHttp</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>csvc</servlet-name>
        <servlet-class>wde.cs.HttpPush</servlet-class>

        <init-param>
            <description>REQUIRED: destination directory for uploaded files</description>
            <param-name>dest-dir</param-name>
            <param-value>/opt/collectors/DE/data/</param-value>
        </init-param>

        <init-param>
            <description>REQUIRED: semicolon separated network address filters</description>
            <param-name>addresses</param-name>
            <param-value>167.21.</param-value>
        </init-param>

        <init-param>
            <description>REQUIRED: semicolon separated filename filters</description>
            <param-name>files</param-name>
            <param-value>atmospheric.txt;subsurface.txt;surface.txt</param-value>
        </init-param>

        <init-param>
            <description>OPTIONAL: minimum milliseconds between upload attempts, 5 minute default</description>
            <param-name>min-interval</param-name>
            <param-value>300000</param-value>
        </init-param>

        <init-param>
            <description>OPTIONAL: maximum bytes allowed for each file, 4KB default</description>
            <param-name>max-filesize</param-name>
            <param-value>4096</param-value>
        </init-param>

        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>csvc</servlet-name>
        <url-pattern>/csvc</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>QedsMgr</servlet-name>
        <servlet-class>wde.qeds.QedsMgr</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>QedsMgr</servlet-name>
        <url-pattern>/QedsMgr</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ListObsTypes</servlet-name>
        <servlet-class>wde.qeds.ListObsTypes</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>ListObsTypes</servlet-name>
        <url-pattern>/ListObsTypes</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GetPlatformsForRegion</servlet-name>
        <servlet-class>wde.qeds.GetPlatformsForRegion</servlet-class>

        <init-param>
            <description>
                OPTIONAL: Turns debug mode on and off, debug mode outputs all stations regardless of distribution group
            </description>
            <param-name>debug</param-name>
            <param-value>true</param-value>
        </init-param>

        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>GetPlatformsForRegion</servlet-name>
        <url-pattern>/GetPlatformsForRegion</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ApplicationInterfaceServlet</servlet-name>
        <servlet-class>wde.qeds.ApplicationInterfaceServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>ApplicationInterfaceServlet</servlet-name>
        <url-pattern>/downloadSubscription</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ServletAdaptor</servlet-name>
        <servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>ServletAdaptor</servlet-name>
        <url-pattern>/resources/*</url-pattern>
    </servlet-mapping>

    <resource-ref>
        <description>wxde</description>
        <res-ref-name>jdbc/wxde</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

    <security-role>
        <role-name>wde_admin</role-name>
    </security-role>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>wxde</web-resource-name>
            <url-pattern>/admin/*</url-pattern>
            <url-pattern>/resources/admin/*</url-pattern>
            <http-method>GET</http-method>
            <http-method>POST</http-method>
        </web-resource-collection>
        <auth-constraint>
            <role-name>wde_admin</role-name>
        </auth-constraint>
    </security-constraint>

    <security-role>
        <role-name>wde_user</role-name>
    </security-role>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>wxde</web-resource-name>
            <url-pattern>/auth2/*</url-pattern>
            <url-pattern>/resources/auth2/*</url-pattern>
            <http-method>GET</http-method>
            <http-method>POST</http-method>
        </web-resource-collection>
        <auth-constraint>
            <role-name>wde_admin</role-name>
            <role-name>wde_user</role-name>
        </auth-constraint>
    </security-constraint>

    <security-role>
        <role-name>wde_limited</role-name>
    </security-role>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>wxde</web-resource-name>
            <url-pattern>/auth/*</url-pattern>
            <url-pattern>/resources/auth/*</url-pattern>
            <http-method>GET</http-method>
            <http-method>POST</http-method>
        </web-resource-collection>
        <auth-constraint>
            <role-name>wde_admin</role-name>
            <role-name>wde_user</role-name>
            <role-name>wde_limited</role-name>
        </auth-constraint>
    </security-constraint>

    <login-config>
        <auth-method>FORM</auth-method>
        <form-login-config>
            <form-login-page>/userLogin.jsp</form-login-page>
            <form-error-page>/userLoginFailed.jsp</form-error-page>
        </form-login-config>
    </login-config>

    <error-page>
        <error-code>404</error-code>
        <location>/error/404.jsp</location>
    </error-page>

    <error-page>
      <exception-type>java.lang.Throwable</exception-type>
      <location>/error/500.jsp</location>
    </error-page>
    
    <filter>
      <filter-name>CachControl</filter-name>
      <filter-class>wde.security.filters.CacheControlFilter</filter-class>
      <init-param>
        <param-name>disableCache</param-name>
        <param-value>true</param-value>
      </init-param>
    </filter>
    <filter-mapping>
      <filter-name>CachControl</filter-name>
      <url-pattern>*.jsp</url-pattern>
      <url-pattern>/resources/*</url-pattern>
      <dispatcher>REQUEST</dispatcher>
      <dispatcher>FORWARD</dispatcher>
    </filter-mapping>

    <filter>
      <filter-name>httpHeaderSecurity</filter-name>
      <filter-class>wde.security.filters.HttpHeaderSecurityFilter</filter-class>
      <init-param>
        <param-name>hstsEnabled</param-name>
        <param-value>true</param-value>
      </init-param>
      <init-param>
        <param-name>hstsMaxAgeSeconds</param-name>
        <param-value>7776000</param-value>
      </init-param>
      <init-param>
        <param-name>hstsIncludeSubDomains</param-name>
        <param-value>true</param-value>
      </init-param>      
      <init-param>
        <param-name>antiClickJackingEnabled</param-name>
        <param-value>true</param-value>
      </init-param>     
      <init-param>
        <param-name>antiClickJackingOption</param-name>
        <param-value>DENY</param-value>
      </init-param>  
      <init-param>
        <param-name>blockContentTypeSniffingEnabled</param-name>
        <param-value>true</param-value>
      </init-param>  
      <init-param>
        <param-name>xssProtectionEnabled</param-name>
        <param-value>true</param-value>
      </init-param>
      <init-param>
        <param-name>contentSecurityEnabled</param-name>
        <param-value>true</param-value>
      </init-param>
      <init-param>
        <param-name>contentSecurityHeaderValue</param-name>
        <param-value>frame-ancestors 'self'; default-src http://fonts.gstatic.com 'none'; script-src http://www.google-analytics.com ajax.googleapis.com maps.googleapis.com http://gmaps-utility-gis.googlecode.com http://api.imapbuilder.net maps.google.com code.jquery.com 'self' 'unsafe-eval'  'unsafe-inline'; style-src 'self'  'unsafe-inline' fonts.googleapis.com; img-src *.openstreetmap.org *.mqcdn.com https://maps.gstatic.com https://csi.gstatic.com https://maps.google.com http://www.google-analytics.com 'self' data:; connect-src 'self'</param-value>
      </init-param>
    </filter>
    <filter-mapping>
      <filter-name>httpHeaderSecurity</filter-name>
      <url-pattern>/*</url-pattern>
    </filter-mapping>
    
  <filter>
    <filter-name>CsrfFilter</filter-name>
    <filter-class>org.apache.catalina.filters.CsrfPreventionFilter</filter-class>
    <init-param>
      <param-name>entryPoints</param-name>
      <param-value>/auth/j_security_check,/auth/loginRedirect.jsp,/userLogin.jsp,/userLoginFailed.jsp,/index.jsp,/downloadSubscription,/userAccountRetrieval.jsp</param-value>
    </init-param>
    <init-param>
      <param-name>nonceCacheSize</param-name>
      <param-value>20</param-value>
    </init-param>
  </filter>
  
  <!--  The filter will only be able to insert tokens in links on a page
        if is mapped, so we need to make sure all JSPs go through the filter  -->
  <filter-mapping>
    <filter-name>CsrfFilter</filter-name>
    <url-pattern>*.jsp</url-pattern>
    <url-pattern>/auth2/*</url-pattern>
    <url-pattern>/admin/*</url-pattern>
    <url-pattern>/resources/*</url-pattern>
    <url-pattern>/auth/*</url-pattern>
    <dispatcher>REQUEST</dispatcher>
    <dispatcher>FORWARD</dispatcher>
  </filter-mapping>
 

	<!-- Only Allow GET and POST methods to access JSPs -->
  <security-constraint>
		<web-resource-collection>
			<web-resource-name>wxde</web-resource-name>
			<url-pattern>*.jsp</url-pattern>
			<http-method-omission>GET</http-method-omission>
			<http-method-omission>POST</http-method-omission>
		</web-resource-collection>
		<auth-constraint />
	</security-constraint>

	<!-- Only allow GET, POST, PUT, and DELETE methods when accessing application. -->
  <security-constraint>
		<web-resource-collection>
			<web-resource-name>wxde</web-resource-name>
			<url-pattern>/*</url-pattern>
			<http-method-omission>GET</http-method-omission>
			<http-method-omission>POST</http-method-omission>
			<http-method-omission>PUT</http-method-omission>
			<http-method-omission>DELETE</http-method-omission>
		</web-resource-collection>
		<auth-constraint />
	</security-constraint>
    
</web-app>
